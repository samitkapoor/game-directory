<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Gameopolis</title>

  <link rel="stylesheet" href="./styles/template.css" />
  <link rel="stylesheet" href="./styles/navbar.css" />
  <link rel="stylesheet" href="./styles/games.css" />
</head>

<body>
  <header>
    <div class="title">Gameopolis</div>
    <nav class="actions">
      <a href="/public/index.html" class="selected">Home</a>
      <a href="/public/views/upload.html">Upload</a>
      <a href="/public/views/about.html">About</a>
    </nav>
  </header>
  <main class="games-collection">
    <% for (var i = 0 ; i < games.length ; i++){ %>
    <div class="game">
      <img class="game-cover" src=<%= games[i].imageUrl %> alt="" />
      <h4 class="game-name"><%= games[i].name %></h4>
    </div>
    <% } %>
  </main>
</body>

</html>